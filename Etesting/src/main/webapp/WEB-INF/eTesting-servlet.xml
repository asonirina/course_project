<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- View Handler -->
    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <bean id="testsRunner"
          class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass" value="by.bsu.project.scheduller.TestsRunnerCron"/>
        <property name="jobDataAsMap">
            <map>
                <entry key="userInfoService" value-ref="userInfoService" />
            </map>
        </property>
    </bean>

    <bean id="testsRunnerTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="testsRunner"/>
        <property name="cronExpression" value="0 0 0/1 * * ?"/>
    </bean>

    <bean id="plagiarismRunner"
          class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass" value="by.bsu.project.scheduller.PlagiarismRunnerCron"/>
        <property name="jobDataAsMap">
            <map>
                <entry key="userInfoService" value-ref="userInfoService" />
            </map>
        </property>
    </bean>

    <bean id="plagiarismRunnerTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="plagiarismRunner"/>
        <property name="cronExpression" value="0 20 0/1 * * ?"/>
    </bean>


    <bean id="neuralRunner"
          class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass" value="by.bsu.project.scheduller.NeuralRunnerCron"/>
        <property name="jobDataAsMap">
            <map>
                <entry key="userInfoService" value-ref="userInfoService" />
            </map>
        </property>
    </bean>

    <bean id="neuralRunnerTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="plagiarismRunner"/>
        <property name="cronExpression" value="0 40 0/1 * * ?"/>
    </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="applicationContextSchedulerContextKey" value="applicationContext"/>
        <property name="triggers">
            <list>
                <ref bean="testsRunnerTrigger"/>
                <ref bean="plagiarismRunnerTrigger"/>
            </list>
        </property>
    </bean>
</beans>